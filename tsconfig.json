{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"lib": [
			"esnext",
			"dom"
		],
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			],
		},
		"types": [
			"unplugin-vue-define-options",
			"element-plus/global",
			"vite/client",
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"./auto-imports.d.ts",
 	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	],
	"typeRoots": ["src/typings"],
}
